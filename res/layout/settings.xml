<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:background="@color/background"
    android:orientation="vertical" >	
   	<!-- Header -->
    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="Settings"
        android:textSize="25dp"
        android:textColor="@color/foreground"/>
    <TextView
        android:layout_width="fill_parent"
		android:layout_height="2dp"
		android:background="@color/foreground"
		android:layout_below="@id/Title"
		android:layout_marginTop="0dp"
		android:id="@+id/HorizontalBar"/>
    <!-- End Header -->
	
	<Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:background="#ff0000"
         android:text="Logout"
         android:textColor="#ffffff"
         android:textSize="25dp"
         android:textStyle="bold"
         android:padding="10dp"
         android:layout_marginBottom="10dp" 
         android:id="@+id/LogoutButton"
         android:onClick="logout"/>
	
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/HorizontalBar"
	    android:layout_marginTop="10dp"
	    android:id="@+id/Terms"
	    android:textColor="@color/foreground"
	    android:text="Terms and Conditions"
	    android:textStyle="bold"
	    android:layout_marginLeft="10dp"
	    android:textSize="20dp"/>
	<TextView
        android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/foreground"
		android:layout_below="@id/Terms"
		android:layout_marginTop="5dp"
		android:id="@+id/HorizontalBar1"/>
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/HorizontalBar1"
	    android:id="@+id/Privacy"
	    android:textColor="@color/foreground"
	    android:textStyle="bold"
	    android:textSize="20dp"
	    android:text="Privacy Policy"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"/>
	<TextView
        android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/foreground"
		android:layout_below="@id/Privacy"
		android:layout_marginTop="5dp"
		android:id="@+id/HorizontalBar2"/>
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/HorizontalBar2"
	    android:id="@+id/NotificationSettings"
	    android:textColor="@color/foreground"
	    android:textStyle="bold"
	    android:textSize="20dp"
	    android:text="Notification Settings"
	    android:layout_marginTop="10dp"
	    android:layout_marginLeft="10dp"/>

</RelativeLayout>